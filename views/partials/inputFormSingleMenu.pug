//-팝업창 영역 (신규등록/수정 겸용)
.hidden1
    form#input-form-single
        .basic-info
            input#object-id-single(type='text' autocomplete='off')
            .text-form
                p.lab 상품이미지
                p.lab-required * 필수입력 항목
                br
                input#image-upload(type='file' accept='image/*' required='')
                .image-upload-area
                    i.fas.fa-plus
                    p 클릭하여 사진 등록
                input#product-image(type='hidden' placeholder='예: https://sample.com/image.png' required='' autocomplete='off')

            //-카테고리
            //-비공개이며 자동으로 입력
            .radios#hiddenRadios
                input#premium(type='radio' name='category' value='프리미엄' required='')
                label(for='premium')
                    span 프리미엄
                input#whoppers(type='radio' name='category' value='와퍼')
                label(for='whoppers')
                    span 와퍼
                input#chicken-burgers(type='radio' name='category' value='치킨버거')
                label(for='chicken-burgers')
                    span 치킨버거
                input#sides(type='radio' name='category' value='사이드')
                label(for='sides')
                    span 사이드
                input#drinks(type='radio' name='category' value='음료')
                label(for='drinks')
                    span 음료
                input#desserts(type='radio' name='category' value='디저트')
                label(for='desserts')
                    span 디저트
                        
            .text-form
                p.lab 메뉴이름(한글)
                p.lab-required * 필수입력 항목
                br
                input#name-kr(type='text' placeholder='최대 20자 입력가능 (예: 와퍼)' maxlength='20' required='' autocomplete='off')
                label(for='name-kr')
            .text-form
                p.lab 메뉴이름(영어)
                p.lab-required * 필수입력 항목
                br
                input#name-eng(type='text' placeholder='최대 50자 입력 (예: Whopper)' maxlength='50' required='' onkeyup="this.value=this.value.replace(/[ㄱ-ㅎ|ㅏ-ㅣ|가-힣|一-龯|ぁ-ん|ァ-ン]/g,'')" autocomplete='off')
                label(for='name-eng')
            .text-form
                p.lab 칼로리(kcal)
                p.lab-required * 필수입력 항목
                br
                input#calories(type='text' placeholder='숫자만 입력 (예: 1000)' maxlength='20' required='' onkeyup="this.value=this.value.replace(/[^0-9]/g,'')" autocomplete='off')
                label(for='calories')
            .text-form
                p.lab 상품가격(원)
                p.lab-required * 필수입력 항목
                br
                input#price(type='text' placeholder='숫자만 입력 (예: 1000)' maxlength='20' required='' onkeyup="this.value=this.value.replace(/[^0-9]/g,'')" autocomplete='off')
                label(for='price')
            .text-form#extra
                p.lab 세트추가금액(원)
                br
                input#extra-price(type='text' value='0' maxlength='20' required='' onkeyup="this.value=this.value.replace(/[^0-9]/g,'')" autocomplete='off')
                label(for='extra-price')

