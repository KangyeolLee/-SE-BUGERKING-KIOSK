extends layouts/main.pug

block title
    script(src = "https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")

block content
    #menu-register
        .top-area
            //- 헤더에 해당
            .container
                img.topArea-logo(src='build/img/logo.png' alt="버거킹 로고이미지")
                span.topArea-title 메뉴관리

                .topArea-button-area
                    a(href='kitchen').topArea-button-area__button 주문알림 >>

        //- 카테고리와 안내문에 해당
        .direction
            //- 사용법안내 회색창
            p(style="font-family: 'Gothic A1', sans-serif;") [안내] 생성된 메뉴를 클릭하면 상세정보 수정이 가능합니다.
        
        include ./partials/categoryTabs

        .popup-area
            #register-popup.popup
                span.register-or-edit 메뉴등록
                .input-form
                    #form-tabs
                        input#single(type='radio' name='singleOrCombo' checked='checked')
                        label(for='single') 단품
                        input#combo(type='radio' name='singleOrCombo')
                        label(for='combo') 세트
                        //- 여기에 입력폼 표시
                        .input-form1
                        .input-form2
                a.decline(href='#a' onclick='return false;') 취소
                a.submit(href='#' onclick='return false;') 확인
            .dim
            
        include ./partials/inputFormSingleMenu
        include ./partials/inputFormSetMenu


        .alert-container
            .alert
                div
                    | 단종 선택시
                    br
                    | 메뉴에서 삭제됩니다!
                    br
                    | 계속 진행하시겠습니까?
                    a.alert-decline(href='#register-popup') 취소
                    a.alert-proceed(href='#register-popup') 확인

        .fill-alert-container
            .alert
                div
                    | 입력되지 않은
                    br
                    | 정보가 있습니다!
                    a.fill-alert-decline(href='#register-popup') 뒤로
