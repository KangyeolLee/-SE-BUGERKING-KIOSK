extends layouts/main.pug

block content
    #orderNotice
        input(type='hidden')#for-audio-event
        audio(src="/build/sounds/alarm.MP3")#audio-sound

        .topArea 
            .container
                img.logo(src='build/img/logo.png' alt="버거킹 로고이미지")
                span.title 주문알림
                
                .button-area
                    .button-area__button 메뉴관리 >>
                    a(href='salesControll').button-area__button 매출관리 >>
                
        .middleArea
            .container
                if(!orders.length)
                        .order-notifications__no-list
                            p 수신된 주문 내역이 없습니다.
                else
                    each order in orders
                        .order-notifications(id=order._id class=order.isChecked ? 'order-notifications__status--check' : 'order-notifications__status--new')
                            p.order-notifications__status #{order.isChecked ? 'check' : 'new'}
                            p.order-notifications-details
                                span(id=order._id + '_num').order-notifications__number #{order.orderNumber}
                                span(id=order._id + '_takeout').order-notifications__takeout #{order.isTakeout ? '포장' : '매장'}
                            .order-notifications-menu-info(id=order._id + '_order')
                                each menu in order.choices
                                    .order-notifications-menu
                                        p.order-notifications__menu-name #{menu.menu.nameKr} x #{menu.amount}
                                        if menu.menu.isCombo
                                            p.order-notifications__menu-sides #{menu.menu.drink.nameKr}, #{menu.menu.sideMenu.nameKr}
                            .button-area    
                                .button-area__button.button-area__button--cancel 취소
                                .button-area__button.button-area__button--complete 완료

                //- 주문내역 팝업창 (평소엔 hidden상태)
                .order-popup
                    .order-popup-box
                        p.order-popup-title 주문번호
                        p.order-popup-num
                        p.order-popup-takeout
                        div.order-popup-menu
                        button.order-popup-cancel 확인


                    